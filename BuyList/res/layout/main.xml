<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List name"
            android:id="@+id/listNameTextView" android:layout_gravity="center" android:textSize="24dp"
            android:singleLine="true"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed:"
                    android:id="@+id/textView" android:textStyle="bold" android:textSize="24dp"
                    android:textColor="#4CFF00"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/completedTextView" android:textSize="24dp" android:paddingLeft="10dp"
                    android:textColor="#4CFF00"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uncompleted:"
                    android:id="@+id/textView2" android:textSize="24dp" android:textStyle="bold"
                    android:textColor="#FF0000"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/uncompletedTextView" android:textSize="24dp" android:paddingLeft="10dp"
                    android:textColor="#FF0000"/>
        </LinearLayout>
    </LinearLayout>
    <ExpandableListView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/exListView" android:layout_gravity="center"/>
</LinearLayout>

