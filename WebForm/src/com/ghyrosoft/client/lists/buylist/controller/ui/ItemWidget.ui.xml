<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
        .categoryStyle {
            border-bottom: 1px solid black;
        }

        .categoryFont
        {
            font-weight: bold;
        }
    </ui:style>

	<ui:image field="remove" src="images/remove.png" />
	<ui:image field="edit" src="images/edit.png" />
	<ui:image field="add" src="images/add.png" />

	<g:HorizontalPanel width="100%" height="34px" styleName="{style.categoryStyle}"
		spacing="5">
		<g:Cell height="100%" verticalAlignment="ALIGN_MIDDLE">
			<g:Label text="Item name" height="" ui:field="itemName" styleName="{style.categoryFont}"/>
		</g:Cell>
		<g:Cell width="16px" height="16px" verticalAlignment="ALIGN_MIDDLE">
			<g:PushButton width="16px" height="16px" ui:field="addButton">
				<g:upFace image='{add}' />
			</g:PushButton>
		</g:Cell>
		<g:Cell width="16px" height="16px" verticalAlignment="ALIGN_MIDDLE">
			<g:PushButton width="16px" height="16px" ui:field="editButton">
				<g:upFace image='{edit}' />
			</g:PushButton>
		</g:Cell>
		<g:Cell width="16px" height="16px" verticalAlignment="ALIGN_MIDDLE">
			<g:PushButton width="16px" height="16px" ui:field="removeButton">
				<g:upFace image='{remove}' />
			</g:PushButton>
		</g:Cell>
	</g:HorizontalPanel>
</ui:UiBinder> 