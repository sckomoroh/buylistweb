<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.errorIconStyle
		{
			margin: 10px;
		}
		
		.errorLabelStyle
		{
			color: red;
			font-weight: bold;
		}
	</ui:style>
	<g:VerticalPanel spacing="5" width="450px">
	<g:HorizontalPanel spacing="10">
		<g:Cell width="" height="" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
			<g:Image url="images/error.png" styleName="{style.errorIconStyle}"/>
		</g:Cell>
		<g:Cell width="100%" height="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
			<g:Label text="New Label" styleName="{style.errorLabelStyle}" width="100%" height="" ui:field="errorMessageLabel"/>
		</g:Cell>
	</g:HorizontalPanel>
	<g:Cell horizontalAlignment="ALIGN_RIGHT">
		<g:Button text="Close" ui:field="closeButton"/>
	</g:Cell>
	</g:VerticalPanel>
</ui:UiBinder> 